<!-- Dashboard Overview Tab Content -->
<!-- Welcome Banner -->
<div class="mb-6 bg-gradient-to-r from-amber-200 via-orange-200 to-amber-300 dark:from-gray-800 dark:via-gray-750 dark:to-gray-900 rounded-2xl shadow-lg p-8 text-gray-800 dark:text-white relative overflow-hidden">
    <div class="absolute top-0 right-0 w-64 h-64 bg-white/30 dark:bg-white/5 rounded-full -mr-32 -mt-32"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/30 dark:bg-white/5 rounded-full -ml-24 -mb-24"></div>
    <div class="relative z-10">
        <h1 class="text-3xl font-bold mb-2 text-gray-900 dark:text-gray-100">Welcome back, <%= user.name %>! ðŸ‘‹</h1>
        <p class="text-gray-700 dark:text-gray-300 text-lg"><%= user.designation %> â€¢ <%= user.department %></p>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Last login: <%= user.lastLogin %></p>
    </div>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
    <!-- Total Students Card -->
    <div class="glass-card rounded-xl shadow-lg p-6 border-l-4 border-blue-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <div class="flex items-center space-x-2 mb-2">
                    <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
                        <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                    </div>
                    <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Total Students</span>
                </div>
                <p class="text-3xl font-bold text-gray-900 dark:text-white"><%= stats.totalStudents %></p>
                <p class="text-sm text-green-600 dark:text-green-400 mt-2 flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                    </svg>
                    +12% from last month
                </p>
            </div>
        </div>
    </div>

    <!-- Total Teachers Card -->
    <div class="glass-card rounded-xl shadow-lg p-6 border-l-4 border-green-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <div class="flex items-center space-x-2 mb-2">
                    <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
                        <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                    <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Total Teachers</span>
                </div>
                <p class="text-3xl font-bold text-gray-900 dark:text-white"><%= stats.totalTeachers %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-2"><%= stats.activeTeachers %> Active</p>
            </div>
        </div>
    </div>

    <!-- Active Classes Card -->
    <div class="glass-card rounded-xl shadow-lg p-6 border-l-4 border-purple-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <div class="flex items-center space-x-2 mb-2">
                    <div class="p-2 bg-purple-100 dark:bg-purple-900/30 rounded-lg">
                        <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    </div>
                    <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Active Classes</span>
                </div>
                <p class="text-3xl font-bold text-gray-900 dark:text-white"><%= stats.activeClasses %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-2"><%= stats.totalSections %> Sections</p>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Activity Row -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
    <!-- Enrollment Trends Chart -->
    <div class="lg:col-span-2 glass-card rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Student Enrollment Trends</h3>
            <select class="px-3 py-1 border border-gray-300 dark:border-gray-600 rounded-lg text-sm dark:bg-gray-700 dark:text-white">
                <option>Last 6 Months</option>
                <option>Last Year</option>
            </select>
        </div>
        <canvas id="enrollmentChart" height="80"></canvas>
    </div>

    <!-- Recent Activity -->
    <div class="glass-card rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Recent Activity</h3>
        <div class="space-y-4">
            <% activities.forEach(activity => { %>
            <div class="flex items-start space-x-3">
                <div class="flex-shrink-0 w-8 h-8 bg-<%= activity.color %>-100 dark:bg-<%= activity.color %>-900/30 rounded-full flex items-center justify-center">
                    <span class="text-lg"><%= activity.icon %></span>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 dark:text-white"><%= activity.title %></p>
                    <p class="text-xs text-gray-600 dark:text-gray-400 truncate"><%= activity.description %></p>
                    <p class="text-xs text-gray-500 dark:text-gray-500 mt-1"><%= activity.time %></p>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>
