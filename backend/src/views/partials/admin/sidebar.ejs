<!-- ========================================
     ADMIN DASHBOARD - SIDEBAR COMPONENT
     Contains navigation menu and user profile
     ======================================== -->
<aside :class="sidebarOpen ? 'w-64' : 'w-20'" class="fixed top-0 left-0 h-full glass-sidebar shadow-xl transition-all duration-300 z-50 sidebar-scrollbar overflow-y-auto">
    <div class="flex flex-col h-full">
        <!-- Logo/Brand Section -->
        <div class="flex items-center justify-between p-4 border-b border-stone-200 dark:border-gray-700">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-gradient-to-br from-amber-200 to-orange-200 dark:from-gray-700 dark:to-gray-600 rounded-lg flex items-center justify-center">
                    <span class="text-xl font-bold text-gray-800 dark:text-white">E</span>
                </div>
                <div x-show="sidebarOpen" x-cloak>
                    <h1 class="text-lg font-bold text-gray-800 dark:text-white">ECMS</h1>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Admin Panel</p>
                </div>
            </div>
            <button @click="sidebarOpen = !sidebarOpen" class="p-2 rounded-lg hover:bg-stone-200/70 dark:hover:bg-gray-700/50 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
            </button>
        </div>

        <!-- Navigation Menu -->
        <nav class="flex-1 p-4 space-y-2">
            <!-- Dashboard -->
            <button @click="activeTab = 'dashboard'" :class="activeTab === 'dashboard' ? 'bg-amber-100 dark:bg-gray-700 text-amber-600 dark:text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-stone-200/50 dark:hover:bg-gray-700/50'" class="w-full flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors group">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
                <span x-show="sidebarOpen" x-cloak class="font-medium">Dashboard</span>
            </button>

            <!-- Profile -->
            <button @click="activeTab = 'profile'" :class="activeTab === 'profile' ? 'bg-amber-100 dark:bg-gray-700 text-amber-600 dark:text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-stone-200/50 dark:hover:bg-gray-700/50'" class="w-full flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors group">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <span x-show="sidebarOpen" x-cloak class="font-medium">Profile</span>
            </button>

            <!-- Students -->
            <button @click="activeTab = 'students'; loadStudents()" :class="activeTab === 'students' ? 'bg-amber-100 dark:bg-gray-700 text-amber-600 dark:text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-stone-200/50 dark:hover:bg-gray-700/50'" class="w-full flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors group">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
                <span x-show="sidebarOpen" x-cloak class="font-medium">Students</span>
            </button>

            <!-- Teachers -->
            <button @click="activeTab = 'teachers'; loadTeachers()" :class="activeTab === 'teachers' ? 'bg-amber-100 dark:bg-gray-700 text-amber-600 dark:text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-stone-200/50 dark:hover:bg-gray-700/50'" class="w-full flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors group">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <span x-show="sidebarOpen" x-cloak class="font-medium">Teachers</span>
            </button>

            <!-- Admins -->
            <button @click="activeTab = 'admins'; loadAdmins()" :class="activeTab === 'admins' ? 'bg-amber-100 dark:bg-gray-700 text-amber-600 dark:text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-stone-200/50 dark:hover:bg-gray-700/50'" class="w-full flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors group">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <span x-show="sidebarOpen" x-cloak class="font-medium">Admins</span>
            </button>

            <!-- Classes -->
            <button @click="activeTab = 'classes'; loadClasses()" :class="activeTab === 'classes' ? 'bg-amber-100 dark:bg-gray-700 text-amber-600 dark:text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-stone-200/50 dark:hover:bg-gray-700/50'" class="w-full flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors group">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
                <span x-show="sidebarOpen" x-cloak class="font-medium">Classes</span>
            </button>

            <!-- Subjects -->
            <button @click="activeTab = 'subjects'; loadSubjects()" :class="activeTab === 'subjects' ? 'bg-amber-100 dark:bg-gray-700 text-amber-600 dark:text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-stone-200/50 dark:hover:bg-gray-700/50'" class="w-full flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors group">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
                <span x-show="sidebarOpen" x-cloak class="font-medium">Subjects</span>
            </button>

            <!-- Settings -->
            <button @click="activeTab = 'settings'" :class="activeTab === 'settings' ? 'bg-amber-100 dark:bg-gray-700 text-amber-600 dark:text-white' : 'text-gray-700 dark:text-gray-300 hover:bg-stone-200/50 dark:hover:bg-gray-700/50'" class="w-full flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors group">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span x-show="sidebarOpen" x-cloak class="font-medium">Settings</span>
            </button>
        </nav>

        <!-- User Profile Section -->
        <div class="border-t border-stone-200 dark:border-gray-700 p-4">
            <div class="flex items-center space-x-3">
                <img src="<%= user.profilePicture || '/static/images/profile/default/default-profile.png' %>" alt="Admin" class="w-10 h-10 rounded-full border-2 border-amber-200 dark:border-gray-600">
                <div x-show="sidebarOpen" class="flex-1 min-w-0" x-cloak>
                    <p class="text-sm font-semibold truncate text-gray-800 dark:text-gray-100"><%= user.name %></p>
                    <p class="text-xs text-gray-600 dark:text-gray-400 truncate"><%= user.designation %></p>
                </div>
                <button id="theme-toggle" class="p-2 rounded-lg hover:bg-stone-200/70 dark:hover:bg-gray-700/50 transition-colors">
                    <svg id="theme-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"></svg>
                </button>
            </div>
        </div>
    </div>
</aside>
