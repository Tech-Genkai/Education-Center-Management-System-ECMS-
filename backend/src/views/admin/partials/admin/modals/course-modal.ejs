<!-- Course Modal - Add/Edit Course Form -->
<div x-show="showModal && (modalType === 'addCourse' || modalType === 'editCourse')" x-cloak class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4" @click.self="showModal = false">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white" x-text="modalType === 'editCourse' ? 'Edit Course' : 'Add New Course'"></h3>
                <button @click="showModal = false" class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-300">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            
            <!-- Course Form -->
            <form id="courseForm" @submit.prevent="modalType === 'editCourse' ? updateCourse() : submitCourseForm($event)" class="space-y-4">
                <!-- Hidden field for course ID during edit -->
                <input type="hidden" id="courseId_db" name="courseId_db">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Course Code *</label>
                        <input type="text" name="courseCode" required placeholder="e.g. BCA, MCA" 
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white uppercase" 
                            :readonly="modalType === 'editCourse'" 
                            :class="{'bg-gray-100 dark:bg-gray-600 cursor-not-allowed': modalType === 'editCourse'}">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Course Name *</label>
                        <input type="text" name="courseName" required placeholder="e.g. Bachelor of Computer Applications" 
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Total Semesters *</label>
                        <input type="number" name="totalSemesters" required min="1" max="10" placeholder="e.g. 6" 
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Academic Year *</label>
                        <input 
                            type="text" 
                            name="academicYear" 
                            required 
                            placeholder="e.g. 2024-25, 2025-26"
                            pattern="[0-9]{4}-[0-9]{2}"
                            title="Format: YYYY-YY (e.g., 2024-25)"
                            :disabled="modalType === 'editCourse'"
                            :class="{'bg-gray-100 dark:bg-gray-600 cursor-not-allowed': modalType === 'editCourse'}"
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                        />
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Format: YYYY-YY (e.g., 2024-25)</p>
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Description</label>
                        <textarea name="description" rows="3" placeholder="Optional description" 
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"></textarea>
                    </div>
                </div>
                <div class="flex justify-end space-x-4 pt-4">
                    <button type="button" @click="showModal = false" 
                        class="px-6 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700">
                        Cancel
                    </button>
                    <button type="submit" 
                        class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700" 
                        x-text="modalType === 'editCourse' ? 'Update Course' : 'Add Course'">
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
