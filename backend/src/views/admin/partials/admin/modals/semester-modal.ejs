<!-- Semester Management Modal -->
<div x-show="showModal && modalType === 'manageSemester'" x-cloak class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4" @click.self="showModal = false">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <div>
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">Manage Semester <span x-text="currentSemester?.semesterNumber"></span></h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mt-1" x-text="currentCourse?.courseName"></p>
                </div>
                <button @click="showModal = false" class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-300">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            <!-- Add Subject Form -->
            <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Add Subject to Semester</h4>
                <form id="assignSubjectForm" @submit.prevent="assignSubjectToSemester($event)" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Subject *</label>
                        <select name="subjectId" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                            <option value="">-- Select Subject --</option>
                            <template x-for="subject in availableSubjects" :key="subject._id">
                                <option :value="subject._id" x-text="`${subject.subjectCode} - ${subject.subjectName}`"></option>
                            </template>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Teacher (Optional)</label>
                        <select name="teacherId" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                            <option value="">-- Select Teacher --</option>
                            <template x-for="teacher in availableTeachers" :key="teacher._id">
                                <option :value="teacher._id">
                                    <span x-text="`${teacher.firstName} ${teacher.lastName}`"></span>
                                    <span x-show="teacher.workload >= 5" class="text-orange-600"> (Workload: <span x-text="teacher.workload"></span>)</span>
                                </option>
                            </template>
                        </select>
                    </div>
                    <div class="flex items-end">
                        <button type="submit" class="w-full px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                            Assign
                        </button>
                    </div>
                </form>
            </div>

            <!-- Current Assignments -->
            <div>
                <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Current Assignments</h4>
                <template x-if="currentSemester?.subjects?.length === 0">
                    <p class="text-gray-500 dark:text-gray-400 text-sm text-center py-8">No subjects assigned yet.</p>
                </template>
                <div class="space-y-2">
                    <template x-for="assignment in currentSemester?.subjects || []" :key="assignment._id">
                        <div class="flex items-center justify-between p-3 bg-white dark:bg-gray-600 border border-gray-200 dark:border-gray-500 rounded-lg">
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900 dark:text-white">
                                    <span x-text="assignment.subjectId?.subjectCode"></span> - <span x-text="assignment.subjectId?.subjectName"></span>
                                </p>
                                <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">
                                    Teacher: 
                                    <span x-text="assignment.teacherId ? `${assignment.teacherId.firstName} ${assignment.teacherId.lastName}` : 'Not assigned'"></span>
                                </p>
                            </div>
                            <div class="flex items-center space-x-2">
                                <button 
                                    @click="changeTeacher(assignment)" 
                                    class="text-blue-600 hover:text-blue-900 dark:text-blue-400 text-sm"
                                    title="Change Teacher"
                                >
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                                    </svg>
                                </button>
                                <button 
                                    @click="removeAssignment(assignment._id)" 
                                    class="text-red-600 hover:text-red-900 dark:text-red-400"
                                    title="Remove"
                                >
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </template>
                </div>
            </div>

            <div class="flex justify-end mt-6">
                <button @click="showModal = false" 
                    class="px-6 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
