<!-- User Detail Popup Modal -->
<div x-show="showUserDetailModal" 
     x-cloak
     @click.self="showUserDetailModal = false"
     class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 backdrop-blur-sm"
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0">
    
    <div class="relative w-full max-w-2xl mx-4"
         @click.stop
         x-transition:enter="transition ease-out duration-300 transform"
         x-transition:enter-start="opacity-0 scale-90 -translate-y-4"
         x-transition:enter-end="opacity-100 scale-100 translate-y-0"
         x-transition:leave="transition ease-in duration-200 transform"
         x-transition:leave-start="opacity-100 scale-100 translate-y-0"
         x-transition:leave-end="opacity-0 scale-90 -translate-y-4">
        
        <!-- Card Container -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl overflow-hidden">
            <!-- Header with Gradient Background -->
            <div class="relative bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-6 pb-20">
                <button @click="showUserDetailModal = false" 
                        class="absolute top-4 right-4 text-white hover:bg-white/20 rounded-full p-2 transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
                
                <h3 class="text-2xl font-bold text-white mb-1">User Profile</h3>
                <p class="text-indigo-100 text-sm" x-text="selectedUser?.userType === 'student' ? 'Student Information' : selectedUser?.userType === 'teacher' ? 'Teacher Information' : 'Administrator Information'"></p>
            </div>
            
            <!-- Profile Section -->
            <div class="relative px-6 -mt-16 mb-6">
                <div class="flex items-end space-x-4">
                    <!-- Profile Picture -->
                    <div class="relative">
                        <img :src="selectedUser?.profilePicture || '/static/images/profile/default/default-profile.png'" 
                             :alt="selectedUser?.firstName"
                             class="w-32 h-32 rounded-2xl object-cover border-4 border-white dark:border-gray-800 shadow-lg"
                             onerror="this.src='/static/images/profile/default/default-profile.png'">
                        <div class="absolute -bottom-2 -right-2 w-10 h-10 bg-green-500 rounded-full border-4 border-white dark:border-gray-800 flex items-center justify-center"
                             x-show="selectedUser?.status === 'active'">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                    </div>
                    
                    <!-- Name and ID -->
                    <div class="flex-1 pb-2">
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white" x-text="selectedUser ? `${selectedUser.firstName} ${selectedUser.lastName}` : ''"></h2>
                        <p class="text-gray-600 dark:text-gray-400 font-mono text-sm" x-text="selectedUser?.studentId || selectedUser?.teacherId || selectedUser?.adminId || 'N/A'"></p>
                        <div class="flex items-center space-x-2 mt-2">
                            <span class="px-3 py-1 text-xs font-semibold rounded-full"
                                  :class="selectedUser?.status === 'active' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'"
                                  x-text="selectedUser?.status || 'N/A'"></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Details Grid -->
            <div class="px-6 pb-6 space-y-6">
                <!-- Contact Information -->
                <div>
                    <h4 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">Contact Information</h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                            <div class="w-10 h-10 bg-indigo-100 dark:bg-indigo-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-xs text-gray-500 dark:text-gray-400">Email</p>
                                <p class="text-sm font-medium text-gray-900 dark:text-white truncate" x-text="selectedUser?.userId?.email || 'N/A'"></p>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg"
                             x-show="selectedUser?.phoneNumber">
                            <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-xs text-gray-500 dark:text-gray-400">Phone</p>
                                <p class="text-sm font-medium text-gray-900 dark:text-white" x-text="selectedUser?.phoneNumber || 'N/A'"></p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Student/Teacher/Admin Specific Info -->
                <div>
                    <h4 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">Additional Details</h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- For Students -->
                        <template x-if="selectedUser?.userType === 'student'">
                            <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                                <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
                                    <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                    </svg>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Class</p>
                                    <p class="text-sm font-medium text-gray-900 dark:text-white" x-text="selectedUser?.currentClass || 'Not assigned'"></p>
                                </div>
                            </div>
                        </template>
                        
                        <!-- For Teachers -->
                        <template x-if="selectedUser?.userType === 'teacher'">
                            <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                                <div class="w-10 h-10 bg-orange-100 dark:bg-orange-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
                                    <svg class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                    </svg>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Department</p>
                                    <p class="text-sm font-medium text-gray-900 dark:text-white" x-text="selectedUser?.department || 'Not assigned'"></p>
                                </div>
                            </div>
                        </template>
                        
                        <!-- For Admins -->
                        <template x-if="selectedUser?.userType === 'admin'">
                            <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                                <div class="w-10 h-10 bg-red-100 dark:bg-red-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
                                    <svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                   </svg>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Designation</p>
                                    <p class="text-sm font-medium text-gray-900 dark:text-white" x-text="selectedUser?.designation || 'Administrator'"></p>
                                </div>
                            </div>
                        </template>
                        
                        <!-- Joining Date -->
                        <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg"
                             x-show="selectedUser?.joiningDate || selectedUser?.createdAt">
                            <div class="w-10 h-10 bg-green-100 dark:bg-green-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-xs text-gray-500 dark:text-gray-400">Joined</p>
                                <p class="text-sm font-medium text-gray-900 dark:text-white" x-text="selectedUser?.joiningDate ? new Date(selectedUser.joiningDate).toLocaleDateString() : (selectedUser?.createdAt ? new Date(selectedUser.createdAt).toLocaleDateString() : 'N/A')"></p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <button @click="showUserDetailModal = false" 
                            class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition">
                        Close
                    </button>
                    <button @click="editUserFromDetail()" 
                            class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                        Edit Profile
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
