<!-- 
    Glassmorphism Delete Confirmation Modal with Password Verification
    Supports: Students, Teachers, Admins
-->
<div id="deleteConfirmModal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-[100] p-4">
    <div class="relative w-full max-w-md">
        <!-- Glassy Modal Container -->
        <div class="glass-delete-modal rounded-2xl shadow-2xl overflow-hidden transform transition-all">
            <!-- Header -->
            <div class="glass-delete-header px-6 py-4 border-b border-red-200/30 dark:border-red-800/30">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="flex-shrink-0 w-12 h-12 rounded-full bg-red-100/80 dark:bg-red-900/40 flex items-center justify-center backdrop-blur-sm">
                            <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold text-gray-900 dark:text-white">Delete Confirmation</h3>
                            <p class="text-xs text-gray-600 dark:text-gray-400">This action requires authentication</p>
                        </div>
                    </div>
                    <button onclick="closeDeleteModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Body -->
            <div class="px-6 py-6 space-y-4">
                <!-- Warning Message -->
                <div class="glass-warning-box rounded-xl p-4 border border-red-200/30 dark:border-red-800/30">
                    <div class="flex items-start space-x-3">
                        <svg class="w-5 h-5 text-red-600 dark:text-red-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <div class="flex-1">
                            <p class="text-sm font-semibold text-red-800 dark:text-red-300 mb-1">Are you sure you want to delete this <span id="deleteEntityType">user</span>?</p>
                            <p class="text-xs text-red-700 dark:text-red-400">This action cannot be undone. The user will be permanently removed from the database.</p>
                        </div>
                    </div>
                </div>

                <!-- User Info Card -->
                <div class="glass-info-card rounded-xl p-4 border border-gray-200/30 dark:border-gray-700/30">
                    <div class="flex items-center space-x-3">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-lg">
                                <span id="deleteUserInitials">U</span>
                            </div>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-semibold text-gray-900 dark:text-white truncate" id="deleteUserName">User Name</p>
                            <p class="text-xs text-gray-600 dark:text-gray-400 truncate" id="deleteUserEmail">email@example.com</p>
                            <p class="text-xs text-gray-500 dark:text-gray-500 mt-0.5" id="deleteUserRole">Role</p>
                        </div>
                    </div>
                </div>

                <!-- Password Input -->
                <div class="space-y-2">
                    <label for="deletePasswordInput" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                        <span class="flex items-center space-x-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                            <span>Enter your password to confirm</span>
                        </span>
                    </label>
                    <div class="relative">
                        <input 
                            type="password" 
                            id="deletePasswordInput"
                            class="glass-input w-full px-4 py-3 rounded-lg border border-gray-300/50 dark:border-gray-600/50 focus:ring-2 focus:ring-red-500 dark:focus:ring-red-400 focus:border-transparent transition-all pr-10"
                            placeholder="Your password"
                            autocomplete="current-password"
                        />
                        <button 
                            type="button"
                            onclick="toggleDeletePasswordVisibility()"
                            class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300"
                        >
                            <svg id="deletePasswordEyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                        </button>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400 flex items-center space-x-1">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>Password is required for security verification</span>
                    </p>
                </div>

                <!-- Error Message -->
                <div id="deleteErrorMessage" class="hidden glass-error-box rounded-lg p-3 border border-red-300/50 dark:border-red-700/50">
                    <div class="flex items-center space-x-2">
                        <svg class="w-5 h-5 text-red-600 dark:text-red-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span id="deleteErrorText" class="text-sm text-red-700 dark:text-red-300"></span>
                    </div>
                </div>
            </div>

            <!-- Footer Actions -->
            <div class="glass-delete-footer px-6 py-4 border-t border-gray-200/30 dark:border-gray-700/30 flex items-center justify-end space-x-3">
                <button 
                    type="button"
                    onclick="closeDeleteModal()"
                    class="glass-button-cancel px-5 py-2.5 rounded-lg font-medium transition-all hover:scale-105"
                >
                    <span class="flex items-center space-x-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        <span>Cancel</span>
                    </span>
                </button>
                <button 
                    type="button"
                    onclick="confirmDelete()"
                    id="deleteConfirmButton"
                    class="glass-button-delete px-5 py-2.5 rounded-lg font-medium transition-all hover:scale-105"
                >
                    <span id="deleteButtonContent" class="flex items-center space-x-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        <span>Delete Permanently</span>
                    </span>
                    <span id="deleteButtonLoading" class="hidden flex items-center space-x-2">
                        <svg class="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>Deleting...</span>
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>

<style>
