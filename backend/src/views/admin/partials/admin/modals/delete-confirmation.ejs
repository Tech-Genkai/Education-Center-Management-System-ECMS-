<script>
    // Global state for delete modal
    window.deleteModalData = {
        userId: null,
        userType: null,
        userName: null,
        userEmail: null,
        userRole: null
    };

    /**
     * Open delete confirmation modal
     * @param {string} userId - The ID of the user to delete
     * @param {string} userType - Type: 'student', 'teacher', or 'admin'
     * @param {string} userName - Full name of the user
     * @param {string} userEmail - Email of the user
     * @param {string} userRole - Role/designation of the user
     */
    window.openDeleteModal = function(userId, userType, userName, userEmail, userRole) {
        // Store data
        window.deleteModalData = { userId, userType, userName, userEmail, userRole };
        
        // Update modal content
        document.getElementById('deleteEntityType').textContent = userType;
        document.getElementById('deleteUserName').textContent = userName;
        document.getElementById('deleteUserEmail').textContent = userEmail;
        document.getElementById('deleteUserRole').textContent = userRole || userType.toUpperCase();
        
        // Set initials
        const initials = userName.split(' ').map(n => n[0]).join('').toUpperCase();
        document.getElementById('deleteUserInitials').textContent = initials;
        
        // Reset form
        document.getElementById('deletePasswordInput').value = '';
        document.getElementById('deleteErrorMessage').classList.add('hidden');
        
        // Show modal
        document.getElementById('deleteConfirmModal').classList.remove('hidden');
        
        // Focus password input
        setTimeout(() => {
            document.getElementById('deletePasswordInput').focus();
        }, 100);
    };

    /**
     * Close delete confirmation modal
     */
    window.closeDeleteModal = function() {
        // Reset loading state first
        setDeleteLoading(false);
        
        // Hide modal
        document.getElementById('deleteConfirmModal').classList.add('hidden');
        
        // Clear data
        window.deleteModalData = { userId: null, userType: null, userName: null, userEmail: null, userRole: null };
        
        // Reset form
        document.getElementById('deletePasswordInput').value = '';
        hideDeleteError();
    };

    /**
     * Toggle password visibility
     */
    window.toggleDeletePasswordVisibility = function() {
        const input = document.getElementById('deletePasswordInput');
        const icon = document.getElementById('deletePasswordEyeIcon');
        
        if (input.type === 'password') {
            input.type = 'text';
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>';
        } else {
            input.type = 'password';
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>';
        }
    };

    /**
     * Show error message
     */
    function showDeleteError(message) {
        const errorBox = document.getElementById('deleteErrorMessage');
        const errorText = document.getElementById('deleteErrorText');
        errorText.textContent = message;
        errorBox.classList.remove('hidden');
    }

    /**
     * Hide error message
     */
    function hideDeleteError() {
        document.getElementById('deleteErrorMessage').classList.add('hidden');
    }

    /**
     * Set loading state
     */
    function setDeleteLoading(isLoading) {
        const button = document.getElementById('deleteConfirmButton');
        const buttonContent = document.getElementById('deleteButtonContent');
        const buttonLoading = document.getElementById('deleteButtonLoading');
        
        if (isLoading) {
            button.disabled = true;
            buttonContent.classList.add('hidden');
            buttonLoading.classList.remove('hidden');
        } else {
            button.disabled = false;
            buttonContent.classList.remove('hidden');
            buttonLoading.classList.add('hidden');
        }
    }

    /**
     * Confirm delete - Send request to backend with password
     */
    window.confirmDelete = async function() {
        const password = document.getElementById('deletePasswordInput').value;
        const { userId, userType, userName } = window.deleteModalData;
        
        // Validation
        if (!password) {
            showDeleteError('Password is required');
            document.getElementById('deletePasswordInput').focus();
            return;
        }
        
        hideDeleteError();
        setDeleteLoading(true);
        
        // Set a timeout to prevent infinite loading (30 seconds)
        const timeoutId = setTimeout(() => {
            setDeleteLoading(false);
            showDeleteError('Request timeout. Please try again.');
        }, 30000);
        
        try {
            // Determine API endpoint
            const endpoints = {
                'student': '/api/students',
                'teacher': '/api/teachers',
                'admin': '/api/superadmins',
                'class': '/api/classes'
            };
            
            const endpoint = endpoints[userType];
            if (!endpoint) {
                clearTimeout(timeoutId);
                throw new Error('Invalid user type');
            }
            
            console.log(`Deleting ${userType} with ID: ${userId}`);
            
            // Send delete request with password
            const response = await fetch(`${endpoint}/${userId}?hard=true`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                },
                credentials: 'include',
                body: JSON.stringify({ password })
            });
            
            // Clear timeout since we got a response
            clearTimeout(timeoutId);
            
            console.log('Delete response status:', response.status);
            const data = await response.json();
            console.log('Delete response data:', data);
            
            if (response.ok) {
                // Success - reset loading state before closing
                setDeleteLoading(false);
                
                // Close modal
                closeDeleteModal();
                
                // Show success notification
                if (window.showNotification) {
                    window.showNotification(`${userName} has been permanently deleted`, 'success');
                } else {
                    alert(`${userName} has been permanently deleted`);
                }
                
                // Refresh the appropriate list after a short delay
                setTimeout(() => {
                    if (userType === 'student' && window.loadStudents) {
                        window.loadStudents();
                    } else if (userType === 'teacher' && window.loadTeachers) {
                        window.loadTeachers();
                    } else if (userType === 'admin' && window.loadAdmins) {
                        window.loadAdmins();
                    } else if (userType === 'class' && window.loadClasses) {
                        window.loadClasses();
                    }
                }, 300);
            } else {
                // Error from server
                console.error('Delete failed:', data);
                showDeleteError(data.message || 'Failed to delete user');
                setDeleteLoading(false);
            }
        } catch (error) {
            clearTimeout(timeoutId);
            console.error('Delete error:', error);
            showDeleteError(error.message || 'An error occurred while deleting the user');
            setDeleteLoading(false);
        }
    };

    // Handle Enter key in password input
    document.addEventListener('DOMContentLoaded', function() {
        const passwordInput = document.getElementById('deletePasswordInput');
        if (passwordInput) {
            passwordInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    confirmDelete();
                }
            });
        }
    });
</script>
