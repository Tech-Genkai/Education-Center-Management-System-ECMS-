<!-- 
    Teacher Modal - Add/Edit Teacher Form
    Purpose: Modal form for creating new teachers or editing existing teacher information
    Used in: Admin Dashboard
-->
<div x-show="showModal && (modalType === 'addTeacher' || modalType === 'editTeacher')" x-cloak class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4" @click.self="showModal = false">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white" x-text="modalType === 'editTeacher' ? 'Edit Teacher' : 'Add New Teacher'"></h3>
                <button @click="showModal = false; resetTeacherForm();" class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-300">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            
            <!-- Teacher Form -->
            <form id="teacherForm" @submit.prevent="modalType === 'editTeacher' ? updateTeacher() : submitTeacherForm($event)" class="space-y-4">
                <input type="hidden" name="teacherId_db" id="teacherId_db">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">First Name *</label>
                        <input type="text" name="firstName" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Name *</label>
                        <input type="text" name="lastName" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Email *</label>
                        <input type="email" name="email" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Phone *</label>
                        <input type="tel" name="phone" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Institute Email</label>
                        <input type="email" name="instituteEmail" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Teacher ID *</label>
                        <input type="text" name="teacherId" id="teacherIdInput" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white" :readonly="modalType === 'editTeacher'" :class="{'bg-gray-100 dark:bg-gray-600 cursor-not-allowed': modalType === 'editTeacher'}">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Department *</label>
                        <input type="text" name="department" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Qualification</label>
                        <input type="text" name="qualification" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>

                    <!-- Subjects Multi-Select -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Subjects</label>
                        
                        <!-- Selected Subjects Display -->
                        <div class="mb-2 flex flex-wrap gap-2" x-show="selectedTeacherSubjects && selectedTeacherSubjects.length > 0">
                            <template x-for="subjectId in selectedTeacherSubjects" :key="subjectId">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300">
                                    <span x-text="availableSubjects.find(s => s._id === subjectId)?.subjectName || 'Unknown'"></span>
                                    <button type="button" @click="selectedTeacherSubjects = selectedTeacherSubjects.filter(id => id !== subjectId)" class="ml-2 text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-200">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                </span>
                            </template>
                        </div>
                        
                        <!-- Search Input and Dropdown Container -->
                        <div class="relative" x-data="{ teacherSubjectSearch: '', showTeacherSubjectDropdown: false }">
                            <input 
                                type="text" 
                                x-model="teacherSubjectSearch"
                                @focus="showTeacherSubjectDropdown = true"
                                @click.away="showTeacherSubjectDropdown = false"
                                placeholder="Search and select subjects..."
                                class="w-full px-4 py-2 pr-10 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-transparent transition-all"
                            />
                            <svg class="w-5 h-5 absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                        
                            <!-- Dropdown List -->
                            <div 
                                x-show="showTeacherSubjectDropdown" 
                                class="absolute z-[100] mt-1 w-full bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg shadow-xl max-h-64 overflow-y-auto"
                                style="max-height: 256px;"
                            >
                                <template x-for="subject in availableSubjects.filter(s => 
                                    s.subjectName.toLowerCase().includes(teacherSubjectSearch.toLowerCase()) || 
                                    s.subjectCode.toLowerCase().includes(teacherSubjectSearch.toLowerCase())
                                )" :key="subject._id">
                                    <div 
                                        class="px-4 py-3 hover:bg-blue-50 dark:hover:bg-gray-700 cursor-pointer flex items-center justify-between border-b border-gray-100 dark:border-gray-700 last:border-b-0 transition-colors"
                                        @click="
                                            if (!selectedTeacherSubjects) selectedTeacherSubjects = [];
                                            if (selectedTeacherSubjects.includes(subject._id)) {
                                                selectedTeacherSubjects = selectedTeacherSubjects.filter(id => id !== subject._id);
                                            } else {
                                                selectedTeacherSubjects.push(subject._id);
                                            }
                                        "
                                    >
                                        <div class="flex-1 min-w-0">
                                            <div class="text-sm font-medium text-gray-900 dark:text-white truncate" x-text="subject.subjectName"></div>
                                            <div class="text-xs text-gray-500 dark:text-gray-400 mt-0.5" x-text="subject.subjectCode"></div>
                                        </div>
                                        <div class="flex-shrink-0 ml-3">
                                            <svg 
                                                x-show="selectedTeacherSubjects && selectedTeacherSubjects.includes(subject._id)"
                                                class="w-5 h-5 text-blue-600 dark:text-blue-400" 
                                                fill="currentColor" 
                                                viewBox="0 0 20 20"
                                            >
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                            </svg>
                                        </div>
                                    </div>
                                </template>
                                <div 
                                    x-show="availableSubjects.filter(s => 
                                        s.subjectName.toLowerCase().includes(teacherSubjectSearch.toLowerCase()) || 
                                        s.subjectCode.toLowerCase().includes(teacherSubjectSearch.toLowerCase())
                                    ).length === 0"
                                    class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400 text-center"
                                >
                                    No subjects found
                                </div>
                            </div>
                        </div>
                        
                        <!-- Hidden inputs for form submission -->
                        <template x-for="(subjectId, index) in selectedTeacherSubjects" :key="index">
                            <input type="hidden" name="subjects[]" :value="subjectId">
                        </template>
                    </div>

                    <!-- Classes Multi-Select -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Classes</label>
                        
                        <!-- Selected Classes Display -->
                        <div class="mb-2 flex flex-wrap gap-2" x-show="selectedTeacherClasses && selectedTeacherClasses.length > 0">
                            <template x-for="classId in selectedTeacherClasses" :key="classId">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300">
                                    <span x-text="availableClasses.find(c => c._id === classId)?.className || 'Unknown'"></span>
                                    <button type="button" @click="selectedTeacherClasses = selectedTeacherClasses.filter(id => id !== classId)" class="ml-2 text-purple-600 dark:text-purple-400 hover:text-purple-800 dark:hover:text-purple-200">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                </span>
                            </template>
                        </div>
                        
                        <!-- Search Input and Dropdown Container -->
                        <div class="relative" x-data="{ teacherClassSearch: '', showTeacherClassDropdown: false }">
                            <input 
                                type="text" 
                                x-model="teacherClassSearch"
                                @focus="showTeacherClassDropdown = true"
                                @click.away="showTeacherClassDropdown = false"
                                placeholder="Search and select classes..."
                                class="w-full px-4 py-2 pr-10 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 focus:border-transparent transition-all"
                            />
                            <svg class="w-5 h-5 absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                        
                            <!-- Dropdown List -->
                            <div 
                                x-show="showTeacherClassDropdown" 
                                class="absolute z-[100] mt-1 w-full bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg shadow-xl max-h-64 overflow-y-auto"
                                style="max-height: 256px;"
                            >
                                <template x-for="cls in availableClasses.filter(c => 
                                    c.className.toLowerCase().includes(teacherClassSearch.toLowerCase()) || 
                                    (c.classCode && c.classCode.toLowerCase().includes(teacherClassSearch.toLowerCase()))
                                )" :key="cls._id">
                                    <div 
                                        class="px-4 py-3 hover:bg-purple-50 dark:hover:bg-gray-700 cursor-pointer flex items-center justify-between border-b border-gray-100 dark:border-gray-700 last:border-b-0 transition-colors"
                                        @click="
                                            if (!selectedTeacherClasses) selectedTeacherClasses = [];
                                            if (selectedTeacherClasses.includes(cls._id)) {
                                                selectedTeacherClasses = selectedTeacherClasses.filter(id => id !== cls._id);
                                            } else {
                                                selectedTeacherClasses.push(cls._id);
                                            }
                                        "
                                    >
                                        <div class="flex-1 min-w-0">
                                            <div class="text-sm font-medium text-gray-900 dark:text-white truncate" x-text="cls.className"></div>
                                            <div class="text-xs text-gray-500 dark:text-gray-400 mt-0.5" x-text="cls.academicYear || ''"></div>
                                        </div>
                                        <div class="flex-shrink-0 ml-3">
                                            <svg 
                                                x-show="selectedTeacherClasses && selectedTeacherClasses.includes(cls._id)"
                                                class="w-5 h-5 text-purple-600 dark:text-purple-400" 
                                                fill="currentColor" 
                                                viewBox="0 0 20 20"
                                            >
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                            </svg>
                                        </div>
                                    </div>
                                </template>
                                <div 
                                    x-show="availableClasses.filter(c => 
                                        c.className.toLowerCase().includes(teacherClassSearch.toLowerCase()) || 
                                        (c.classCode && c.classCode.toLowerCase().includes(teacherClassSearch.toLowerCase()))
                                    ).length === 0"
                                    class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400 text-center"
                                >
                                    No classes found
                                </div>
                            </div>
                        </div>
                        
                        <!-- Hidden inputs for form submission -->
                        <template x-for="(classId, index) in selectedTeacherClasses" :key="index">
                            <input type="hidden" name="classes[]" :value="classId">
                        </template>
                    </div>
                </div>
                <div class="flex justify-end space-x-4 pt-4">
                    <button type="button" @click="showModal = false; resetTeacherForm();" class="px-6 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700">
                        Cancel
                    </button>
                    <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700" x-text="modalType === 'editTeacher' ? 'Update Teacher' : 'Add Teacher'">
                        Add Teacher
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
