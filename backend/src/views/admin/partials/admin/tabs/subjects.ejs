<!-- Subjects Tab Content -->
<!-- Note: The subjects tab appears to be integrated within the classes tab in the original file -->
<!-- If you need a separate subjects tab, this is a placeholder structure -->
<div class="mb-6 flex justify-between items-center">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Subject Management</h2>
    <button @click="modalType = 'addSubject'; showModal = true; document.getElementById('subjectForm').reset(); document.getElementById('subjectId_db').value = ''" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
        + Add New Subject
    </button>
</div>

<div class="glass-card rounded-xl shadow-md p-6">
    <div class="mb-4">
        <input type="text" placeholder="Search subjects..." class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full">
            <thead>
                <tr class="border-b border-gray-200 dark:border-gray-700">
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Code</th>
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Title</th>
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Credits</th>
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Branch</th>
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Classes/Week</th>
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Semester</th>
                    <th class="text-center py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Actions</th>
                </tr>
            </thead>
            <tbody id="subjectsTableBody">
                <tr class="border-b border-gray-100 dark:border-gray-700">
                    <td colspan="7" class="py-8 text-center text-gray-500 dark:text-gray-400">Loading subjects...</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
