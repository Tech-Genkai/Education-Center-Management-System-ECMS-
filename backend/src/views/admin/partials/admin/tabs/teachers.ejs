<!-- Teachers Tab Content -->
<div class="mb-6 flex justify-between items-center">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Teacher Management</h2>
    <button @click="modalType = 'addTeacher'; showModal = true" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
        + Add New Teacher
    </button>
</div>
<div class="glass-card rounded-xl shadow-md p-6">
    <div class="mb-4">
        <input type="text" id="teacherSearch" placeholder="Search teachers..." class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full">
            <thead>
                <tr class="border-b border-gray-200 dark:border-gray-700">
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Photo</th>
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">ID</th>
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Name</th>
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Email</th>
                    <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300">Department</th>
                    <th class="text-center py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300 w-24">Status</th>
                    <th class="text-center py-3 px-4 font-semibold text-sm text-gray-700 dark:text-gray-300 w-40">Actions</th>
                </tr>
            </thead>
            <tbody id="teachersTableBody">
                <tr class="border-b border-gray-100 dark:border-gray-700">
                    <td colspan="7" class="py-8 text-center text-gray-500 dark:text-gray-400">Loading teachers...</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
