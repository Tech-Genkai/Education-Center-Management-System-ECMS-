# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ecms
# Alternative: MONGODB_URL=mongodb://localhost:27017/ecms

# Session & Security
SESSION_SECRET=your-session-secret-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ACCESS_SECRET=your-jwt-access-secret-change-in-production
BCRYPT_ROUNDS=12

# Application Settings
APP_NAME=ECMS Portal
APP_URL=http://localhost:5000

# Email/SMTP Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_NAME=ECMS Portal
# SMTP_FROM_EMAIL=noreply@ecms.com

# Redis Configuration (Optional - for session store/caching)
# REDIS_URL=redis://localhost:6379

# Profile Upload Cleanup Settings
PROFILE_UPLOAD_RETENTION_DAYS=1
PROFILE_UPLOAD_CLEANUP_INTERVAL_MS=3600000
